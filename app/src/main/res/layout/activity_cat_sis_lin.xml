                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mod5spd"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_below="@+id/iv_spd"
                    android:id="@+id/tv_spd"
                    android:text="Sistemas de proporção direta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="9dp"
                    android:textSize="24sp" />

                <TextView
                    android:layout_below="@+id/tv_spd"
                    android:id="@+id/tv_des_spd"
                    android:text="Aula sobre sistemas de proporção direta com o professor Delon Barros."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingBottom="5dp"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_spi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            app:cardMaxElevation="3dp"
            app:cardCornerRadius="4dp"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
