                    android:textSize="24sp" />

                <TextView
                    android:layout_below="@+id/tv_laplace"
                    android:id="@+id/tv_des_laplace"
                    android:text="Professor Delon Barros explica como utilizar o teoria de Laplace no cálculo do determinante de uma matriz."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingBottom="5dp"
                    android:textSize="14sp" />
            </RelativeLayout>
